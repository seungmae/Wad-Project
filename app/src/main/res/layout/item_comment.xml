<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:gravity="center_vertical"
              android:orientation="horizontal">
    <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/commentviewitem_textview_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7.5dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/juafont"
                android:textColor="@color/black"
                tools:text="유저 아이디" />
    </LinearLayout>

    <LinearLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <TextView
                android:background="@drawable/white_rounded_edittext"
                android:id="@+id/commentviewitem_textview_comment"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hannafont"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                tools:text="메세지 입니다" />

    </LinearLayout>

</LinearLayout>