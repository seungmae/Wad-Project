<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
       xmlns:app="http://schemas.android.com/apk/res-auto">
    xmlns:app="http://schemas.android.com/apk/res-auto"

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:background="@color/white">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/today"
                android:background="#00ff0000"
                android:text="오늘의 단어"
                android:fontFamily="@font/juafont"
                android:textSize="28dp"
                android:layout_marginTop="150dp"
                android:gravity="center"
                android:textColor="@color/grey"
                android:layout_centerHorizontal="true"/>


        <Button
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:id="@+id/today_word"
                android:layout_below="@+id/today"
                android:background="?attr/selectableItemBackgroundBorderless"
                tools:text="Test"
                android:fontFamily="@font/juafont"
                android:textSize="40dp"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"/>

        <com.airbnb.lottie.LottieAnimationView
                android:foregroundGravity="center"
                android:layout_below="@+id/today_word"
                android:id="@+id/lottie"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:lottie_autoPlay="true"
                app:lottie_repeatCount="5"
                android:layout_centerHorizontal="true"
                app:lottie_fileName="pointer.json"/>

    </RelativeLayout>

</merge>